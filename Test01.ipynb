    "def reverse_text (input):\n",
    "    user_input = input(\"Enter your text: \")\n",
    "    print(\"Your text in lowecase: \", user_input.lower())\n",
    "    reverse_input_lower = user_input.lower() [::-1]\n",
    "    new_input = reverse_input_lower [0:-1]\n",
    "    return new_input    \n"
